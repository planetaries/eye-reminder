{
  "name": "eye reminder",
  "version": "1.0",
  "description": "displays a popup every 20 minutes to remind you to rest your eyes",
  "permissions": ["activeTab", "alarms", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/eye16.png",
      "32": "images/eye32.png",
      "48": "images/eye48.png",
      "128": "images/eye128.png"
    }
  },
  "icons": {
      "16": "images/eye16.png",
      "32": "images/eye32.png",
      "48": "images/eye48.png",
      "128": "images/eye128.png"
  },
  "manifest_version": 2
}